<script type="application/javascript">
    $(document).ready(function(){
        $("[name='music_checkbox']").bootstrapSwitch();
        $("#save").click(function () {
            var x = $("form").serializeArray();
            console.log(x);
            if(x.length){
                $.post("/admin/update",
                        {music_on: true},
                        function(data, status) {
                            console.log("\npost status: " + status);
                        });
            }
            else{
                $.post("/admin/update",
                        {music_on: false},
                        function(data, status) {
                            console.log("\npost status: " + status);
                        });
            }
            return false;
        });

    });

</script>